---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Esporita">
  <main>
    <h1><span class="text-gradient">Esporita</span></h1>

    <h2>Mar. Playa. Diversi&oacute;n.</h2>

    <div class="instructions">
      <strong>Whaaat?</strong>
      <p>We are a small hotel :-)</p>
    </div>

    <hr />
    <p class="address">Espora 1591, Valeria del Mar, Buenos Aires, Argentina</p>
    <p class="copyright">
      Copyright &copy; 2024. Todos los derechos reservados.
    </p>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .logo {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 180px;
    height: auto;
    z-index: -1;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 2em;
    font-family: Rockwell;
  }

  h2 {
    font-size: 2rem;
    font-weight: 400;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
    font-family: Rockwell;
  }

  .accent {
    color: rgb(var(--accent));
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 300%;
    background-position: 0%;
  }

  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }

  .instructions strong {
    color: rgb(var(--accent-light));
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(36ch, 1fr));
    gap: 2rem;
    padding: 0;
  }

  .link-card-grid A,
  .link-card-grid A:visited {
    color: rgb(var(--accent));
    text-decoration: none;
  }

  hr {
    width: 70%;
    border: 1px solid #444;
  }

  .address {
    text-align: center;
    color: #aaa;
    font-size: smaller;
  }

  .copyright {
    text-align: center;
    color: #aaa;
    font-size: small;
  }
</style>
